{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to access dashboard",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/farms": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to manage farms",
            "rule": "authenticated"
          }
]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/crops": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view crops",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login",
      "excludeRedirectQuery": false
    }
  },
  "/tasks": {
    "allow": {
      "when": {
        "conditions": [
{
            "label": "User must be logged in to view tasks",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/weather": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view weather",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/finance": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to manage finances",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}